{
  "name": "healthcare-backend",
  "version": "1.0.0",
  "description": "Healthcare AI Platform Backend",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    
    "start:ts": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start:prod": "NODE_ENV=production node server.js",
    "migration:generate": "npm run typeorm migration:generate -- -d src/config/data-source.ts",
    "migration:run": "npm run typeorm migration:run -- -d src/config/data-source.ts",
    "migration:revert": "npm run typeorm migration:revert -- -d src/config/data-source.ts",
    "typeorm": "ts-node-dev ./node_modules/typeorm/cli",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "security:scan": "npm audit",
    "docker:build": "docker build -t healthcare-api .",
    "docker:run": "docker-compose up -d",
    "db:setup": "npx ts-node scripts/setup-database.ts",
    "db:check": "node scripts/check-db.js",
    "db:migrate": "npm run typeorm migration:run -- -d src/config/data-source.ts",
    "db:generate": "npm run typeorm migration:generate -- -d src/config/data-source.ts",
    "db:seed": "node scripts/seed-demo-users.js",
    "db:fix-password": "node scripts/fix-patient-password.js"
  },
  "keywords": [
    "healthcare",
    "ai",
    "nodejs",
    "mysql",
    "medical",
    "hipaa"
  ],
  "author": "HealthCare+ Team",
  "license": "ISC",
  "dependencies": {
    "argon2": "^0.30.3",
    "aws-sdk": "^2.1693.0",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dayjs": "^1.11.19",
    "dicom-parser": "^1.8.21",
    "dotenv": "^16.6.1",
    "express": "^4.22.1",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^6.11.2",
    "express-validator": "^7.3.1",
    "helmet": "^7.2.0",
    "http-status-codes": "^2.2.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.3",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.16.0",
    "node-cron": "^3.0.2",
    "node-forge": "^1.3.1",
    "pg": "^8.16.3",
    "pg-pool": "^3.10.1",
    "prom-client": "^14.2.0",
    "redis": "^4.6.7",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^4.8.3",
    "speakeasy": "^2.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "typeorm": "^0.3.17",
    "uuid": "^9.0.0",
    "winston": "^3.9.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.3.1",
    "@types/pg": "^8.16.0",
    "@types/speakeasy": "^2.0.9",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint": "^8.42.0",
    "jest": "^29.5.0",
    "nodemon": "^3.1.11",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
